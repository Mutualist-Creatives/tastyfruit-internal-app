// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Product {
  id              String   @id @default(dbgenerated("gen_random_uuid()"))
  slug            String   @unique
  name            String
  description     String?
  price           Float
  category        String
  imageUrl        String?
  stock           Int      @default(0)
  isActive        Boolean  @default(true)
  
  // Product specific fields
  layoutType      String?  // "layout-a" or "layout-b"
  characterSlug   String?
  gesture         String?
  fruitCardType   String?
  bgGradient      String?
  fruitCardImage  String?
  
  // Nutrition info (stored as JSON)
  nutrition       Json?
  
  // Relations
  fruitTypes      FruitType[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("products")
}

model FruitType {
  id          String   @id @default(dbgenerated("gen_random_uuid()"))
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  name        String
  slug        String
  image       String
  description String
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("fruit_types")
}

model Recipe {
  id           String   @id @default(dbgenerated("gen_random_uuid()"))
  title        String
  description  String?
  imageUrl     String?
  
  // Recipe details
  servings     String?  // e.g., "6-8", "1", "2"
  cookingTime  String?  // e.g., "60 minutes", "10 minutes"
  author       String
  difficulty   String   @default("Easy") // Easy, Medium, Hard
  
  // Ingredients and instructions (stored as JSON for flexibility)
  ingredients  Json     // Array of {name, amount, note?}
  instructions Json     // Array of {title, description}
  
  isPublished  Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("recipes")
}

model Publication {
  id          String    @id @default(dbgenerated("gen_random_uuid()"))
  title       String
  content     String    // HTML content
  excerpt     String?
  author      String
  category    String    // "Event", "Aktivitas", "Produk", "Informasi"
  imageUrl    String?
  isPublished Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("publications")
}

model User {
  id        String   @id @default(dbgenerated("gen_random_uuid()"))
  email     String   @unique
  name      String?
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
